<PainelIA>:
    orientation: 'vertical'
    padding: 20
    spacing: 15
    canvas.before:
        Color:
            rgba: 0.05, 0.05, 0.1, 1  # Fundo futurista escuro azulado
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Painel de Controle da IA"
        font_size: 30
        font_name: 'Roboto'
        color: 0, 1, 0.6, 1  # Verde ciano neon
        size_hint_y: None
        height: 50

    Label:
        text: root.status
        font_size: 20
        font_name: 'Roboto'
        color: (0, 1, 0.3, 1) if root.ia_ligada else (1, 0.2, 0.2, 1)
        size_hint_y: None
        height: 40

    ProgressBar:
        max: 100
        value: root.nivel_ameaca
        height: 25
        size_hint_y: None
        canvas.before:
            Color:
                rgba: 0.3, 0.3, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

    Button:
        text: "Ligar IA"
        font_size: 18
        font_name: 'Roboto'
        background_color: 0, 0.6, 1, 1  # Azul neon
        color: 1, 1, 1, 1
        on_press: root.ligar_ia()
        disabled: root.ia_ligada
        size_hint_y: None
        height: 50

    TextInput:
        id: entrada_comando
        hint_text: "Digite um comando..."
        font_size: 16
        font_name: 'Roboto'
        foreground_color: 0, 1, 1, 1  # Ciano claro
        background_color: 0.1, 0.1, 0.2, 1
        hint_text_color: 0.6, 0.6, 0.6, 1
        multiline: False
        size_hint_y: None
        height: 40

    Button:
        text: "Enviar Comando"
        font_size: 18
        font_name: 'Roboto'
        background_color: 0.2, 0.8, 0.8, 1  # Ciano neon
        color: 0, 0, 0, 1
        on_press: root.enviar_comando()
        size_hint_y: None
        height: 50

    Label:
        text: "Hist√≥rico de Eventos"
        font_size: 18
        font_name: 'Roboto'
        color: 0.8, 0.5, 1, 1  # Roxo neon
        size_hint_y: None
        height: 30

    ScrollView:
        size_hint: (1, 1)
        bar_width: 10

        Label:
            text: root.log_text
            font_size: 16
            font_name: 'Roboto'
            color: 0.9, 0.9, 1, 1  # Azul claro
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
