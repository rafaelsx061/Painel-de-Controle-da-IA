<PainelIA>:
    orientation: 'vertical'
    padding: 20
    spacing: 15
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # Fundo preto
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Painel de Controle da IA"
        font_size: 28
        color: 1, 1, 1, 1
        size_hint_y: None
        height: 50

    Label:
        text: root.status
        font_size: 20
        color: (0, 1, 0, 1) if root.ia_ligada else (1, 0, 0, 1)
        size_hint_y: None
        height: 40

    ProgressBar:
        max: 100
        value: root.nivel_ameaca
        height: 25
        size_hint_y: None

    Button:
        text: "Ligar IA"
        on_press: root.ligar_ia()
        disabled: root.ia_ligada
        size_hint_y: None
        height: 50

    TextInput:
        id: entrada_comando
        hint_text: "Digite um comando..."
        multiline: False
        size_hint_y: None
        height: 40

    Button:
        text: "Enviar Comando"
        on_press: root.enviar_comando()
        size_hint_y: None
        height: 50
